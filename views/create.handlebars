{{> navbar}}

<article class="message is-dark">
    <div class="message-header">
        <p>Account Information</p>
    </div>
    <div class="message-body">
        <div class="container">
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <form id="edit-player" data-id="{{id}}">

                        <div class="field">
                            <label class="label">First Name</label>
                            <input type="text" class="input  is-black" id="firstName" value="{{firstName}}">
                        </div>
                        <div class="field">
                            <label class="label">Last Name</label>
                            <input type="text" class="input  is-black" id="lastName" value="{{lastName}}">
                        </div>
                        <div class="field">
                            <label class="label">User Name</label>
                            <input type="text" class="input  is-black" id="username" value="{{username}}">
                        </div>
                        <div class="field">
                            <label class="label">Email Address</label>
                            <input class="input  is-black" id="email" value="{{email}}">
                        </div>
                        <div class="field">
                            <label class="label">Password</label>
                            <input type="password" class="input  is-black" id="password" value="{{password}}">
                        </div>
                        <div class="field">
                            <label class="label">Confirm Password</label>
                            <input type="password" class="input  is-black" id="password" value="{{password}}">
                        </div>


                    </form>

                    <div class="buttons has-addons is-centered">

                        <a href="" class="button is-outlined is-dark">Save</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</article>
{{> footer}}