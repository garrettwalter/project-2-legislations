<article class="message is-dark">
    <div class="message-header">
        <p>Log In</p>
    </div>
    <div class="message-body">
        <form>
            <div class="field">
                <label class="label">Username</label>
                <input type="text" class="input  is-black" placeholder="Enter username">
            </div>
            <div class="field">
                <label class="label">Password</label>
                <input type="text" class="input is-black" placeholder="Enter password">
            </div>
        </form>
        <div class="buttons has-addons is-centered">
            <a href="" class="button  is-outlined is-dark">Submit</a>
        </div>
        <div class="buttons has-addons is-centered">
            <p class="noAccount">Don't have an account? Create one here</p>
        </div>
        <div class="buttons has-addons is-centered">

            <a href="" class="button is-outlined is-dark">Create Account</a>
        </div>
        <div class="buttons has-addons is-centered">
            <a href="" class="button is-outlined is-dark">Forgot Password</a>
        </div>
    </div>
</article>
